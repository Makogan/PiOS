{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "tasks": 
    [
        {
            "taskName": "build",
            "command": "make",
            "isShellCommand": true,
            "args": ["all"],
            "showOutput": "always"
        },

        {
            "taskName": "clean",
            "command": "make",
            "isShellCommand": true,
            "args": ["clean"],
            "showOutput": "always"
        },

        {
            "taskName": "transfer",
            "command": "file-transfer",
            "isShellCommand": true,
            "args": ["kernel.img", "/media/camilo/GPMICROSD"],
            "showOutput": "always"
        },
        {
            "taskName": "eject",
            "command": "ejectUSB",
            "isShellCommand": true,
            "args": ["/media/camilo/GPMICROSD"],
            "showOutput": "always"
        }
    ]
}